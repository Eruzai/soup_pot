<%= form_with url: "/my_recipes", method: :post do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="form-group">
    <%= form.label :cooking_time %>
    <%= form.text_field :cooking_time %>
  </div>

  <div class="form-group">
    <%= form.label :ingredients %>
    <%= form.text_field :ingredients %>
  </div>

  <div class="form-group">
    <%= form.label :directions %>
    <%= form.text_area :directions %>
  </div>

  <%= form.submit "Create Recipe", class: 'btn btn-primary' %>
<% end %>