<ul>
  <img src=<%= recipe.image %> alt='food img' width='200' height='200'>
  <li>
    <%= recipe.description %>
  </li>

  <li>
  <% if recipe.cooking_time %>
    <%= recipe.cooking_time %>
     <% end %>
  </li>

  <li>
    <% if recipe.source %>
    <%= recipe.source %>
     <% end %>
  </li>

  <li>
    <% if recipe.recipe_url %>
      <a href="<%= recipe.recipe_url %>">Recipe link!</a>
    <% end %>
  </li>

  <li>List of ingredients:</li>
  <ul>
    <% recipe.ingredients.each do |ingredient| %>
      <li><%= ingredient.item %></li>
    <% end %>
  </ul>

  <h4><%= recipe.directions %></h4>

  <% if current_user.id == recipe.user_id %>
    <% if !recipe.recipe_url %>
      <%= link_to 'Edit', edit_my_recipe_path(recipe.id) %>
    <% end %>
    <%= link_to 'Delete', my_recipe_path(recipe.id), method: :delete, data: { confirm: 'Delete this Recipe?' } %>
  <% end %>
</ul>

<% if current_user %>
  <%= form_for [recipe, Review.new] do |form| %>
    <div class="form-group">
      <%= form.label :Write_a_review! %>
      <%= form.text_area :comment %>
    </div>

    <div class="form-group">
      <%= form.label :rating %>
      <%= form.select :rating, [5, 4, 3, 2, 1] %>
    </div>

    <%= form.submit 'Post', class: 'btn btn-primary' %>
  <% end %>
<% end %>

<div class="reviews">
  <% recipe.reviews.reverse_each do |review| %>
    <% if review.rating %>
      <p>Rating: <%= review.rating %>/5</p>
      <p>Review: <%= review.comment %></p>
    <% end %>

    <% if current_user && current_user.id == review.user_id %>
      <%= link_to edit_recipe_review_path(recipe_id: recipe.id, id: review.id), class: 'btn-edit' do %>
        <%= fa_icon "edit", text: 'Edit', class: 'fa-icon' %>
      <% end %>

      <%= button_to recipe_review_path(recipe_id: recipe.id, id: review.id),
        class: 'btn-delete',
        method: :delete,
        data: { confirm: "Delete this review?" } do %>
          <%= fa_icon "trash", text: 'Delete', class: 'fa-icon' %>
      <% end %>
    <% end %>
  <% end %>
</div>
