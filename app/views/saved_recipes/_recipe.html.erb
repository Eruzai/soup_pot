<div class="recipe-info">
  <% if recipe.web_image %>
    <img src=<%= recipe.web_image %> alt="Soup image" width="200" height="200">
  <% else %>
    <img src=<%= recipe.image %> alt="Soup image" width="200" height="200">
  <% end %>

  <h2>Ingredients:</h2>
  <ul>
    <% recipe.ingredients.each do |ingredient| %>
      <li class="ingredients-list"><%= ingredient.item %></li>
    <% end %>
  </ul>


  <h2>Cooking Instructions:</h2>
  <% if recipe.directions %>
    <h5><%= recipe.directions %></h5>
  <% else %>
    <h5><a href="<%= recipe.recipe_url %>" class="recipe-link">Recipe link!</a></h5>
  <% end %>

  <% if current_user %>
    <%= form_for [recipe, Review.new] do |form| %>
      <div class="form-group">
        <%= form.label :Write_a_review! %>
        <%= form.text_area :comment %>
      </div>

      <div class="form-group">
        <%= form.label :rating %>
        <%= form.select :rating, [5, 4, 3, 2, 1] %>
      </div>

      <%= form.submit 'Post', class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <div class="reviews">
    <% recipe.reviews.reverse_each do |review| %>
      <% if review.rating %>
        <p>Rating: <%= review.rating %>/5</p>
        <p>Review: <%= review.comment %></p>
      <% end %>

      <% if current_user && current_user.id == review.user_id %>
        <%= link_to edit_recipe_review_path(recipe_id: recipe.id, id: review.id), class: 'btn-edit' do %>
          <%= fa_icon "edit", text: 'Edit', class: 'fa-icon' %>
        <% end %>

        <%= button_to recipe_review_path(recipe_id: recipe.id, id: review.id),
          method: :delete,
          data: { confirm: "Delete this review?" },
          class: 'btn-delete' do %>
            <%= fa_icon "trash", text: 'Delete', class: 'fa-icon' %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
