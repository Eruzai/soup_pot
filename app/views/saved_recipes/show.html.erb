<%= @recipe.name %>
<div><%= @recipe.description %> </div>
<div><%= @recipe.cooking_time %> </div>
<div><%= @recipe.directions %> </div>
<div>
  List of ingredients:
  <% @recipe.ingredients.all.each do |ingredient| %>
    <div>
      <%= ingredient.item %>
    </div>
  <% end %>
</div>

<% if current_user %>
<%= form_for [@recipe, @review] do |form| %>
  <div class="form-group">
    <%= form.label :Write_a_review! %>
    <%= form.text_area :comment %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.select :rating, [5, 4, 3, 2, 1] %>
  </div>

  <%= form.submit 'Post', class: 'btn btn-primary' %>
<% end %>
<% end %>

<div class="reviews">

<% @reviews.reverse_each do |review| %>
  <div>
  <% if review.rating %>
    <p>Rating: <%= review.rating %>/5</p>
    <p>Review: <%= review.comment %></p>
  <% end %>

  <% if current_user && current_user.id == review.user_id %>
      <%= link_to edit_recipe_review_path(recipe_id: @recipe.id, review_id: review.id), class: 'btn-edit' do %>
          <%= fa_icon "edit", text: 'Edit', class: 'fa-icon' %>
      <% end %>

      <%= button_to recipe_review_path(recipe_id: @recipe.id, review_id: review.id),
        class: 'btn-delete',
        method: :delete,
        data: { confirm: "Delete this review?" } do %>
          <%= fa_icon "trash", text: 'Delete', class: 'fa-icon' %>
      <% end %>
    <% end %>
  </div>
<% end %>
</div>


<%= link_to 'back', my_recipes_path %>
