<body class="edit-item">

  <header class="page-header">
    <h1>Use the form below to edit your recipe</h1>
  </header>

  <div class="form container">
    <%= form_with url: "/my_recipes/#{@recipe.id}", method: :patch do |form| %>
      <div class="form-group">
        <%= form.label "Soup name:" %>
        <%= form.text_field :name, value: "#{@recipe.name}", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Image upload:" %>
        <%= form.file_field :image, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Description:" %>
        <%= form.text_field :description, value: "#{@recipe.description}", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Cooking time:" %>
        <%= form.text_field :cooking_time, value: "#{@recipe.cooking_time}", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Ingredients:" %>
        <%= form.text_area :ingredients, value: "#{@ingredients}", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Cooking instructions:" %>
        <%= form.text_area :directions, value: "#{@recipe.directions}", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit "Update Recipe" %>
      </div>
    <% end %>
  </div>

</body>
