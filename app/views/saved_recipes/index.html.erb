<% @recipes.each do |recipe| %>
  <div>
    <%= link_to recipe.name, my_recipe_path(recipe.id) %>
    <img src=<%= recipe.image %> alt='food img' width='200' height='200'>
    <%= recipe.description %>
    <%= recipe.cooking_time %>
    <%= recipe.source %>
    <% if recipe.recipe_url %>
      <a href=<%= recipe.recipe_url %>>Recipe link!</a>
    <% end %>
    <div>
      List of ingredients:
      <% recipe.ingredients.all.each do |ingredient| %>
        <div>
        <%= ingredient.item %>
        </div>
      <% end %>
    </div>
    <div>
      <%= recipe.directions %>
    </div>
    <% if current_user.id == recipe.user_id %>
      <% if !recipe.recipe_url %>
        <%= link_to 'Edit', edit_my_recipe_path(recipe.id)  %>
      <% end %>
      <%= link_to 'Delete', my_recipe_path(recipe.id), method: :delete, data: { confirm: 'Delete this Recipe?' } %>
    <% end %>
  </div>
<% end %>
<div>
  <% if @path == 'my_recipes' %>
    <%= link_to 'Create', new_my_recipe_path %>
  <% end %>
</div>
