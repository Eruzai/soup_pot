<body class="edit-item">

  <header class="page-header">
    <h1>Edit your Review</h1>
  </header>

  <div class="container">
    <%= form_with(model: [@recipe, @review], local: true) do |form| %>
      <div class="form-group">
        <%= form.label :rating %>
        <%= form.number_field :rating, in: 1..5, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :comment %>
        <%= form.text_area :comment, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit "Update Review", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

</body>
