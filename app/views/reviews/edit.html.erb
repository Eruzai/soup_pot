<h2>Edit Review</h2>

<%= form_with(model: [@recipe, @review], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5 %>
  </div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>

  <%= form.submit "Update Review", class: 'btn btn-primary' %>
<% end %>
