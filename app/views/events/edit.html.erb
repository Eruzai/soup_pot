<body class="events-info">

<header class="page-header">
    <h1>Edit Event!</h1>
</header>

<div class='container'>
  <%= form_with(model: @event, url: event_path(@event), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label "Title" %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label "Start Time" %>
      <%= form.datetime_local_field :start_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Event", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
<%= link_to "Go Back", events_path, class: "btn btn-primary"%>
</body>
