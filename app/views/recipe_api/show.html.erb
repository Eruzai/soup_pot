<body class="soup-api">

  <header class="page-header">
    <h1>
      Let's find out what we can make...
    </h1>
    <h3>
      Enter your ingredients and I'll look up some recipes for you!
    </h3>
  </header>

  <div class="body-items">
    <div class="form-and-fridge container">
      <div class="form">
        <%= form_with do |form| %>
          <div class="form-group">
            <%= form.label :ingredient_1 %>
            <%= form.text_field :ingredient_1, id: 'ingredient-text-field', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :ingredient_2 %>
            <%= form.text_field :ingredient_2, id: 'ingredient-text-field', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :ingredient_3 %>
            <%= form.text_field :ingredient_3, id: 'ingredient-text-field', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :ingredient_4 %>
            <%= form.text_field :ingredient_4, id: 'ingredient-text-field', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :ingredient_5 %>
            <%= form.text_field :ingredient_5, id: 'ingredient-text-field', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit "Submit", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>

      <% if current_user %>
        <div class="fridge">
          <button class="btn btn-primary", id="toggle-items">Open Fridge</button>
          <div id="items-list" class="hidden">
            <p>
              <% if @items.present? %>
                <ul>
                  <% @items.each do |item| %>
                    <li>
                      <%= item.name %>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </p>
          </div>
          <p class="fridge-message", id="fridge-message">
            Click on the button above to display your fridge items!
          </p>
        </div>
      <% end %>
    </div>

    <div class="recipe-api-hits">
      <%= render "recipe" %>
    </div>

  </div>

  <div class="attribution">
  Photo by <a href="https://unsplash.com/@lamposaritonang?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Lampos Aritonang</a> on <a href="https://unsplash.com/photos/white-ceramic-round-plate-on-brown-wooden-table-e0rzKWVUMu4?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Unsplash</a>
  </div>

</body>
