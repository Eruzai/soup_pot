<body class="login">

  <header class="page-header">
    <h1>Please enter your email and password below:</h1>
  </header>
  
  <div class="form container">
    <%= form_with url: '/login' do |form| %>
      <div class="form-group">
        <%= form.label "Email:" %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label "Password:" %>
        <%= form.text_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= submit_tag "Login" %>
      </div>
    <% end %>
  </div>

</body>
