<body class="edit-item">

  <header class="page-header">
    <h1>Alter the fields below to edit your fridge item</h1>
  </header>

  <div class="form container">
    <%= form_for @item do |form| %>

      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :quantity %>
        <%= form.text_field :quantity, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :expiration_date %>
        <%= form.text_field :expiration_date, placeholder: "yyyy-mm-dd", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit %>
      </div>

    <% end %>
  </div>

  <div class="attribution">
    Photo by <a href="https://unsplash.com/@elloproducts?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Ello</a> on <a href="https://unsplash.com/photos/green-and-pink-plastic-container-AEU9UZstCfs?utm_content=creditCopyText&utm_medium=referral&utm_source=unsplash">Unsplash</a>
  </div>
  
</body>
